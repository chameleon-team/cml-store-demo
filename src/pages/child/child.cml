class Index  {
  data = {
    title: "chameleon",
    chameleonSrc: require('../../assets/images/chameleon.png')
  }
  computed = {
    ...store.mapGetters({
      'maintext': 'getMainText',
      'childtext': 'getChildText'
    })
  }
  methods = {
    ...store.mapMutations({
      'setMainText': 'setMainText'
    }),
    tap () {
      this.setMainText('MainText');
    }
  }
}

export default new Index();

